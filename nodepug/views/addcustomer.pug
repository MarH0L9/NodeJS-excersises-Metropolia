doctype html
html
  head
    title Add customer
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    )
  body
    .container
      h1 Add New customer
      form(action='/addcustomer', method='POST')
        
        .mb-3
          input(type="text", name="firstname" placeholder="First name").form-control
        .mb-3
          input(type="text", name="lastname" placeholder="Last name").form-control
        .mb-3 
            input(type="text", name="email" placeholder="Email").form-control
        .mb-3 
            input(type="number", name="phone" placeholder="Phone").form-control
        .mb-3
          input(type="submit", value="Add").btn.btn-primary
