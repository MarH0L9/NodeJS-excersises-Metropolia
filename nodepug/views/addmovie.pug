doctype html
html
  head
    title Add movie
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    )
  body
    .container
      h1 New movie
      form(action='/addmovie', method='POST')
        .mb-3
          input(type="text", name="title").form-control
        .mb-3
          input(type="text", name="director").form-control
        .mb-3
          input(type="number", name="year").form-control
        .mb-3
          input(type="submit", value="Add").btn.btn-primary
