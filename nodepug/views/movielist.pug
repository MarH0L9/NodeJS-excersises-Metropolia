doctype html
html
  head
    title Movies
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    )
  body
    div.container
      div
        a(href='/addmovie').btn.btn-primary Add movie
      div
        table.table.table-striped
          tbody
            thead
              tr
                td Title
                td Director
                td Year
            each movie in movies
              tr 
                td #{movie.title}
                td #{movie.director}
                td #{movie.year}